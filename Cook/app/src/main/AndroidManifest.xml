<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.anu.cook" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".CoverActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SearchActivity"
            android:label="@string/title_activity_search" >
            <intent-filter>
                <action android:name="com.example.anu.SEARCH" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SearchListItem"
            android:label="@string/title_activity_search_list_item" >
        </activity>
        <activity
            android:name=".RecipesList"
            android:label="@string/title_activity_recipes_list" >
        </activity>
        <activity
            android:name=".RecipyListItem"
            android:label="@string/title_activity_recipy_list_item" >
        </activity>
        <activity
            android:name=".RecipyDescription"
            android:label="@string/title_activity_recipy_description" >
        </activity>
        <activity
            android:name=".WebSite"
            android:label="@string/title_activity_web_site" >
        </activity>
        <activity
            android:name=".SecondPage"
            android:label="@string/title_activity_second_page" >
            <intent-filter>
                <action android:name="com.example.anu.SECONDPAGE" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CoursesSearchActivity"
            android:label="@string/title_activity_courses_search" >
        </activity>
        <activity
            android:name=".CourseSearchItem"
            android:label="@string/title_activity_course_search_item" >
        </activity>
        <activity
            android:name=".CourseSpecificRecipes"
            android:label="@string/title_activity_course_specific_recipes" >
        </activity>
        <activity
            android:name=".CourseRecipeDirections"
            android:label="@string/title_activity_course_recipe_directions" >
        </activity>
    </application>

</manifest>
